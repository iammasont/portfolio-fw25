<nav id="nav-wrapper">
  <div class="nav-blur-clip">
    <div class="nav-bg-color"></div>
    <div class="blur-layer b1"></div>
    <div class="blur-layer b2"></div>
    <div class="blur-layer b3"></div>
    <div class="blur-layer b4"></div>
    <div class="blur-layer b5"></div>
    <div class="blur-layer b6"></div>
    <div class="blur-layer b7"></div>
    <div class="blur-layer b8"></div>
    <div class="blur-layer b9"></div>
  </div>
</nav>

<div id="nav-content-wrapper">
  <a href="/" class="site-name">Nathaniel Wilkens</a>

  <button id="nav-toggle" class="nav-toggle" aria-label="Toggle navigation">
    <span class="bracket left">[</span>
    
    <div id="inline-nav-links" class="inline-nav-links">
      <a href="/work" class="inline-nav-link">WORK</a>
      <a href="/info" class="inline-nav-link">INFO</a>
      <a href="/contact" class="inline-nav-link">CONTACT</a>
    </div>

    <span class="plus-icon">+</span>

    <span class="bracket right">]</span>
  </button>
</div>

<style>
  /* --- 1. SETTINGS --- */
  :root {
    --header-height-desktop: 120px;
    --header-height-mobile: 100px;
    --ease-out-timing: cubic-bezier(0.165, 0.84, 0.44, 1); 
    --transition-speed: 0.8s;
    
    /* Initialize vars */
    --links-shift-x: 0px;
    --links-max-width: 0px;
  }

  /* --- 2. WRAPPERS --- */
  #nav-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: var(--header-height-desktop);
    z-index: 9999;
    pointer-events: none;
  }

  .nav-blur-clip {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
  }

  .nav-bg-color {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background: linear-gradient(180deg, var(--red, #D05C2A) 0%, rgba(208, 92, 42, 0.7) 35%, rgba(208, 92, 42, 0) 100%);
  }

  /* Blur Layers */
  .blur-layer { position: absolute; top: 0; left: 0; width: 100%; height: 100%; pointer-events: none; }
  .blur-layer.b1 { backdrop-filter: blur(64px); -webkit-backdrop-filter: blur(64px); mask: linear-gradient(to bottom, rgba(0,0,0,1) 0%, rgba(0,0,0,1) 10%, rgba(0,0,0,0) 30%); -webkit-mask: linear-gradient(to bottom, rgba(0,0,0,1) 0%, rgba(0,0,0,1) 10%, rgba(0,0,0,0) 30%); }
  .blur-layer.b2 { backdrop-filter: blur(48px); -webkit-backdrop-filter: blur(48px); mask: linear-gradient(to bottom, rgba(0,0,0,1) 5%, rgba(0,0,0,1) 20%, rgba(0,0,0,0) 40%); -webkit-mask: linear-gradient(to bottom, rgba(0,0,0,1) 5%, rgba(0,0,0,1) 20%, rgba(0,0,0,0) 40%); }
  .blur-layer.b3 { backdrop-filter: blur(32px); -webkit-backdrop-filter: blur(32px); mask: linear-gradient(to bottom, rgba(0,0,0,1) 10%, rgba(0,0,0,1) 30%, rgba(0,0,0,0) 50%); -webkit-mask: linear-gradient(to bottom, rgba(0,0,0,1) 10%, rgba(0,0,0,1) 30%, rgba(0,0,0,0) 50%); }
  .blur-layer.b4 { backdrop-filter: blur(24px); -webkit-backdrop-filter: blur(24px); mask: linear-gradient(to bottom, rgba(0,0,0,1) 20%, rgba(0,0,0,1) 40%, rgba(0,0,0,0) 60%); -webkit-mask: linear-gradient(to bottom, rgba(0,0,0,1) 20%, rgba(0,0,0,1) 40%, rgba(0,0,0,0) 60%); }
  .blur-layer.b5 { backdrop-filter: blur(16px); -webkit-backdrop-filter: blur(16px); mask: linear-gradient(to bottom, rgba(0,0,0,1) 30%, rgba(0,0,0,1) 50%, rgba(0,0,0,0) 70%); -webkit-mask: linear-gradient(to bottom, rgba(0,0,0,1) 30%, rgba(0,0,0,1) 50%, rgba(0,0,0,0) 70%); }
  .blur-layer.b6 { backdrop-filter: blur(12px); -webkit-backdrop-filter: blur(12px); mask: linear-gradient(to bottom, rgba(0,0,0,1) 40%, rgba(0,0,0,1) 60%, rgba(0,0,0,0) 80%); -webkit-mask: linear-gradient(to bottom, rgba(0,0,0,1) 40%, rgba(0,0,0,1) 60%, rgba(0,0,0,0) 80%); }
  .blur-layer.b7 { backdrop-filter: blur(8px); -webkit-backdrop-filter: blur(8px); mask: linear-gradient(to bottom, rgba(0,0,0,1) 50%, rgba(0,0,0,1) 70%, rgba(0,0,0,0) 90%); -webkit-mask: linear-gradient(to bottom, rgba(0,0,0,1) 50%, rgba(0,0,0,1) 70%, rgba(0,0,0,0) 90%); }
  .blur-layer.b8 { backdrop-filter: blur(4px); -webkit-backdrop-filter: blur(4px); mask: linear-gradient(to bottom, rgba(0,0,0,1) 60%, rgba(0,0,0,1) 80%, rgba(0,0,0,0) 95%); -webkit-mask: linear-gradient(to bottom, rgba(0,0,0,1) 60%, rgba(0,0,0,1) 80%, rgba(0,0,0,0) 95%); }
  .blur-layer.b9 { backdrop-filter: blur(2px); -webkit-backdrop-filter: blur(2px); mask: linear-gradient(to bottom, rgba(0,0,0,1) 70%, rgba(0,0,0,1) 90%, rgba(0,0,0,0) 100%); -webkit-mask: linear-gradient(to bottom, rgba(0,0,0,1) 70%, rgba(0,0,0,1) 90%, rgba(0,0,0,0) 100%); }

  /* --- 3. CONTENT LAYOUT --- */
  #nav-content-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: 24px 5vw;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 10000; 
    pointer-events: none; 
  }

  .site-name, .nav-toggle { pointer-events: auto; }

  .site-name {
    font-family: 'Geist Mono', monospace;
    font-weight: 700;
    color: #000;
    text-decoration: none;
    font-size: 1rem;
    transition: filter var(--transition-speed) var(--ease-out-timing);
    filter: blur(0px);
  }

  /* --- 4. NAV TOGGLE COMPONENT --- */
  .nav-toggle {
    cursor: pointer;
    display: flex;
    align-items: center;
    background: none;
    border: 1px solid transparent;
    padding: 0.5rem 0;
    border-radius: 0.5rem;
    color: #000;
    position: relative;
    user-select: none;
    font-family: 'Geist Mono', monospace;
    font-size: 1.5rem;
    font-weight: 500;
    line-height: 1;
    transition: background-color 0.3s ease, padding var(--transition-speed) var(--ease-out-timing);
  }

  .nav-toggle.measuring, .nav-toggle.measuring * {
    transition: none !important;
  }

  .bracket {
    display: inline-block;
    font-weight: 700;
    transform: translateX(0);
    will-change: transform;
    transition: transform var(--transition-speed) var(--ease-out-timing), margin var(--transition-speed) var(--ease-out-timing);
    
  }

  .plus-icon {
    display: inline-block;
    margin: 0 0.5rem;
    will-change: transform, margin;
    transition: transform var(--transition-speed) var(--ease-out-timing), margin var(--transition-speed) var(--ease-out-timing);
  }

  /* --- 5. LINKS CONTAINER --- */
  .inline-nav-links {
    display: flex;
    gap: 1.5rem;
    max-width: 0;
    overflow: hidden;
    white-space: nowrap;
    margin: 0;
    opacity: 0;
    
    /* FIX: Added padding-bottom to ensure the lower underline isn't clipped by overflow:hidden */
    padding-bottom: 4px;

    will-change: max-width, opacity, margin;
    transition: max-width var(--transition-speed) var(--ease-out-timing),
                opacity var(--transition-speed) var(--ease-out-timing),
                margin var(--transition-speed) var(--ease-out-timing);
  }

  /* --- LINK STYLING & UNDERLINE ANIMATION --- */
  .inline-nav-link {
    position: relative; 
    text-decoration: none;
    color: var(--black, #000); 
    font-size: 0.875rem;
    font-weight: 700;
    transition: color 0.2s;
    transform: translateY(2px);
  }

  /* Create the line */
  .inline-nav-link::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 2px;
    
    /* FIX: Moved down by 3px */
    bottom: -3px; 
    left: 0;
    background-color: currentColor;
    
    /* Animation Logic */
    transform: scaleX(0);
    transform-origin: bottom right; /* Grows from right... */
    transition: transform 0.3s ease-out;
  }

  .inline-nav-link:hover {
    color: #000;
  }

  .inline-nav-link:hover::after {
    transform: scaleX(1);
    transform-origin: bottom left; /* ...but on hover, it fills from left */
  }

  /* --- HOVER (Idle Only) --- */
  .nav-toggle:not(.is-active):hover .bracket.left { transform: translateX(-5px); }
  .nav-toggle:not(.is-active):hover .bracket.right { transform: translateX(5px); }
  .nav-toggle:not(.is-active):hover .plus-icon { margin: 0 0.75rem; }

  /* --- ACTIVE (OPEN) STATE --- */
  .nav-toggle.is-active {
    padding-right: 0.75rem;
    padding-left: 0.5rem;
  }

  .nav-toggle.is-active .bracket.left {
    transform: translateX(calc(-1 * var(--links-shift-x)));
    margin-right: 1.5rem; 
  }

  .nav-toggle.is-active .inline-nav-links {
    max-width: var(--links-max-width);
    opacity: 1;
    margin-right: 1.5rem;
  }

  .nav-toggle.is-active .plus-icon {
    transform: rotate(45deg);
    margin: 0;
  }

  .nav-toggle.is-active .bracket.right {
    transform: translateX(0);
  }

  @media (max-width: 768px) {
    #nav-wrapper { height: var(--header-height-mobile); }
    .nav-blur-clip { height: var(--header-height-mobile); }
    #nav-content-wrapper { padding: 20px 5vw; }
    .nav-toggle { font-size: 1.25rem; }
  
  }

  @media (max-width: 768px) {
  /* Keep toggle on the right side always */
  .nav-toggle {
    position: fixed;
    right: 2vw;
    top: 12px;
  }
  
  /* Create blur overlay that covers the nav area */
  .nav-toggle.is-active::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: var(--header-height-mobile);
    background: rgba(208, 92, 42, 0.25);
    backdrop-filter: blur(2px);
    -webkit-backdrop-filter: blur(2px);
    z-index: -1;
    pointer-events: none;
  }
  
  /* Ensure toggle content stays above blur */
  .nav-toggle.is-active > * {
    position: relative;
    z-index: 1;
  }

  /* Blur the site name when nav is fully opened */
  #nav-content-wrapper.nav-active .site-name {
    filter: blur(8px);
  }
}

/* Keep wrapper fixed */
#nav-content-wrapper {
  position: fixed;
  z-index: 10001;
}
</style>

<script is:inline>
  function initNavigation() {
    const toggle = document.getElementById('nav-toggle');
    const navWrapper = document.getElementById('nav-content-wrapper');
    if (!toggle || !navWrapper) return;

    if (toggle._clickHandler) toggle.removeEventListener('click', toggle._clickHandler);

      const clickHandler = (e) => {
        e.stopPropagation();
        
        const navLinks = toggle.querySelector('.inline-nav-links');
        const leftBracket = toggle.querySelector('.bracket.left');
        const openBracketMarginRight = 24; 

        if (!navLinks || !leftBracket) return;

        const isCurrentlyActive = toggle.classList.contains('is-active');

        if (!isCurrentlyActive) {
          // --- OPENING SEQUENCE ---
          toggle.classList.add('measuring');
          navLinks.style.maxWidth = 'fit-content';

          const linksWidthPx = navLinks.scrollWidth;
          const leftBracketRect = leftBracket.getBoundingClientRect();
          const navLinksRect = navLinks.getBoundingClientRect();
          const shiftPx = (leftBracketRect.left - navLinksRect.left) + openBracketMarginRight;

          toggle.style.setProperty('--links-max-width', `${linksWidthPx}px`);
          toggle.style.setProperty('--links-shift-x', `${shiftPx}px`);

          navLinks.style.removeProperty('max-width');
          toggle.classList.remove('measuring');

          void toggle.offsetWidth; 
          void navLinks.offsetWidth; 

          setTimeout(() => {
              toggle.classList.add('is-active');
              navWrapper.classList.add('nav-active');
          }, 20);

        } else {
          // --- CLOSING SEQUENCE ---
          toggle.classList.remove('is-active');
          navWrapper.classList.remove('nav-active');
          setTimeout(() => {
            if(!toggle.classList.contains('is-active')) {
              toggle.style.removeProperty('--links-max-width');
              toggle.style.removeProperty('--links-shift-x');
            }
          }, 800);
        }
      };

    toggle.addEventListener('click', clickHandler);
    toggle._clickHandler = clickHandler;

    // Helpers
    const closeNav = () => {
      toggle.classList.remove('is-active');
      navWrapper.classList.remove('nav-active');
    };

    document.addEventListener('click', (e) => {
        if (toggle.classList.contains('is-active') && !toggle.contains(e.target)) {
            closeNav();
        }
    });
    
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && toggle.classList.contains('is-active')) {
            closeNav();
        }
    });
  }

  document.addEventListener('astro:page-load', initNavigation);
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initNavigation);
  } else {
    initNavigation();
  }
</script>