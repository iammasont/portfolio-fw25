// src/pages/work/[slug].astro
import Layout from '../../layouts/Layout.astro';
import { readdirSync, readFileSync } from 'fs';
import { join } from 'path';

export const prerender = true;

// Generate static paths for all projects
export async function getStaticPaths() {
  const projectsDir = join(process.cwd(), 'src', 'data', 'projects');
  const projectFiles = readdirSync(projectsDir).filter(file => file.endsWith('.json'));
  
  const paths = projectFiles.map(file => {
    const content = readFileSync(join(projectsDir, file), 'utf-8');
    const project = JSON.parse(content);
    
    return {
      params: { slug: project.slug },
      props: { project }
    };
  });
  
  return paths;
}

const { project } = Astro.props;

// Helper function to convert category slug to display name
function getCategoryDisplay(slug: string): string {
  const categoryMap: Record<string, string> = {
    'live-events': 'Live Events',
    'installation': 'Installation',
    'broadcast': 'Broadcast',
    'concert': 'Concert',
    'experiential': 'Experiential',
    'corporate': 'Corporate'
  };
  return categoryMap[slug] || slug;
}

// Get all projects for prev/next navigation
const projectsDir = join(process.cwd(), 'src', 'data', 'projects');
const projectFiles = readdirSync(projectsDir).filter(file => file.endsWith('.json'));
const allProjects = projectFiles
  .map(file => {
    const content = readFileSync(join(projectsDir, file), 'utf-8');
    return JSON.parse(content);
  })
  .filter(p => p.status === 'published')
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());

const currentIndex = allProjects.findIndex(p => p.slug === project.slug);
const prevProject = currentIndex > 0 ? allProjects[currentIndex - 1] : null;
const nextProject = currentIndex < allProjects.length - 1 ? allProjects[currentIndex + 1] : null;

// Helper to render rich text (basic implementation)
function renderRichText(content: any): string {
  if (!content || !content.children) return '';
  
  return content.children.map((child: any) => {
    if (child.type === 'p') {
      const text = child.children.map((c: any) => c.text || '').join('');
      return `<p>${text}</p>`;
    }
    return '';
  }).join('');
}
---

<Layout title={`${project.title} - Nate Wilkens`}>
  <section id="project-detail">
    
    <!-- Project Header -->
    <div class="project-header">
      <div class="header-left">
        {project.client && (
          <div class="client-name">{project.client}</div>
        )}
        <h1 class="project-title">{project.title}</h1>
      </div>
      
      <div class="header-right">
        <div class="short-description">
          {project.shortDescription}
        </div>
        <div class="header-tags">
          {project.tags.map((tag: string) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      </div>
    </div>

    <!-- Image Gallery -->
    <div class="gallery">
      <!-- Hero Image -->
      <div class="gallery-item hero">
        <img src={project.heroImage} alt={project.title} />
      </div>
      
      <!-- Additional Gallery Items with Layout Support -->
      {(() => {
        const rendered = [];
        let skipNext = false;
        
        project.gallery?.forEach((item: any, index: number) => {
          if (skipNext) {
            skipNext = false;
            return;
          }
          
          const nextItem = project.gallery[index + 1];
          
          // If both this and next are "half", render them together
          if (item.layout === 'half' && nextItem?.layout === 'half') {
            rendered.push(
              <div class="gallery-row">
                <div class="gallery-item half">
                  {item.type === 'image' && item.image && (
                    <>
                      <img src={item.image} alt={item.caption || project.title} />
                      {item.caption && <p class="caption">{item.caption}</p>}
                    </>
                  )}
                  {item.type === 'video' && item.videoUrl && (
                    <>
                      <div class="video-wrapper">
                        <iframe 
                          src={item.videoUrl} 
                          frameborder="0" 
                          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                          allowfullscreen
                        ></iframe>
                      </div>
                      {item.caption && <p class="caption">{item.caption}</p>}
                    </>
                  )}
                </div>
                <div class="gallery-item half">
                  {nextItem.type === 'image' && nextItem.image && (
                    <>
                      <img src={nextItem.image} alt={nextItem.caption || project.title} />
                      {nextItem.caption && <p class="caption">{nextItem.caption}</p>}
                    </>
                  )}
                  {nextItem.type === 'video' && nextItem.videoUrl && (
                    <>
                      <div class="video-wrapper">
                        <iframe 
                          src={nextItem.videoUrl} 
                          frameborder="0" 
                          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                          allowfullscreen
                        ></iframe>
                      </div>
                      {nextItem.caption && <p class="caption">{nextItem.caption}</p>}
                    </>
                  )}
                </div>
              </div>
            );
            skipNext = true;
          } else {
            // Render full width
            rendered.push(
              <div class="gallery-item full">
                {item.type === 'image' && item.image && (
                  <>
                    <img src={item.image} alt={item.caption || project.title} />
                    {item.caption && <p class="caption">{item.caption}</p>}
                  </>
                )}
                {item.type === 'video' && item.videoUrl && (
                  <>
                    <div class="video-wrapper">
                      <iframe 
                        src={item.videoUrl} 
                        frameborder="0" 
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                        allowfullscreen
                      ></iframe>
                    </div>
                    {item.caption && <p class="caption">{item.caption}</p>}
                  </>
                )}
              </div>
            );
          }
        });
        
        return rendered;
      })()}
    </div>

    <!-- Info Section -->
    <div class="info-section">
      <div class="section-label">Info</div>
      <div class="info-content" set:html={renderRichText(project.description)} />
    </div>

    <!-- Credits Section -->
    {project.credits && (
      <div class="credits-section">
        <div class="section-label">Project Credits</div>
        <div class="credits-content" set:html={renderRichText(project.credits)} />
      </div>
    )}

    <!-- Navigation -->
    <nav class="project-navigation">
      {prevProject ? (
        <a href={`/work/${prevProject.slug}`} class="nav-link prev" data-hover="true">
          <span class="nav-label">Previous Project</span>
          <span class="nav-title">{prevProject.title}</span>
          {prevProject.client && (
            <span class="nav-client">{prevProject.client}</span>
          )}
        </a>
      ) : (
        <div class="nav-link disabled"></div>
      )}
      
      {nextProject ? (
        <a href={`/work/${nextProject.slug}`} class="nav-link next" data-hover="true">
          <span class="nav-label">Next Project</span>
          <span class="nav-title">{nextProject.title}</span>
          {nextProject.client && (
            <span class="nav-client">{nextProject.client}</span>
          )}
        </a>
      ) : (
        <div class="nav-link disabled"></div>
      )}
    </nav>

    <!-- Back to Home -->
    <div class="back-home">
      <a href="/" class="back-link" data-hover="true">‚Üê Back to Projects</a>
    </div>

  </section>
</Layout>

<style>
  #project-detail {
    background: var(--red);
    color: var(--black);
    min-height: 100vh;
    padding: 120px 5svw 100px;
  }

  /* Project Header */
  .project-header {
    max-width: 1400px;
    margin: 0 auto 60px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: end; /* Align to baseline */
  }

  .header-left {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .client-name {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    font-weight: 500;
    margin-bottom: 4px;
  }

  .project-title {
    font-family: 'Geist', sans-serif;
    font-weight: 700;
    font-size: clamp(2.575rem, 5.5svw, 4rem);
    line-height: 0.9;
    letter-spacing: -0.02em;
    margin: 0;
  }

  .header-right {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding-bottom: 4px; /* Fine-tune baseline alignment */
  }

  .short-description {
    font-family: 'Geist', sans-serif;
    font-size: clamp(1rem, 2svw, 1.125rem);
    line-height: 1.4;
    max-width: 55ch;
  }

  .header-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .tag {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.625rem;
    padding: 0.375rem 0.75rem;
    background: var(--black);
    color: var(--red);
    border-radius: 0.125rem;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    font-weight: 500;
  }

  /* Gallery */
  .gallery {
    max-width: 1400px;
    margin: 0 auto 80px;
    display: grid;
    gap: 40px;
  }

  .gallery-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
  }

  .gallery-item {
    width: 100%;
  }

  .gallery-item.hero {
    margin-bottom: 20px;
  }

  .gallery-item.full {
    /* Full width items span entire grid */
  }

  .gallery-item.half {
    /* Half width items are in gallery-row */
  }

  .gallery-item img {
    width: 100%;
    height: auto;
    display: block;
    background: rgba(0, 0, 0, 0.1);
    border-radius: 30px;
    border-width: 2px;
    border-color: black;
    overflow: hidden;
  }

  .video-wrapper {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
  }

  .video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 30px;
    border-width: 2px;
    border-color: black;
    overflow: hidden;
  }

  .caption {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    margin-top: 12px;
    opacity: 0.7;
  }

  /* Info Section */


  .info-section,
  .credits-section {
    max-width: 1400px;
    margin: 0 auto 60px;
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 60px;
    align-items: start;
  }

  .info-content :global(p:first-child),
.credits-content :global(p:first-child) {
  margin-top: 0;
}

  .section-label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    font-weight: 500;
    /* Align to cap height of content text */
    padding-top: 0.15em;
  }

  .info-content,
  .credits-content {
    font-family: 'Geist', sans-serif;
    font-size: 1.125rem;
    line-height: 1.6;
    
  }

  .info-content :global(p),
  .credits-content :global(p) {
    margin-bottom: 1em;
  }

  .info-content :global(p:last-child),
  .credits-content :global(p:last-child) {
    margin-bottom: 0;
  }

  /* Navigation */
  .project-navigation {
    max-width: 1400px;
    margin: 80px auto 40px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    padding-top: 40px;
    border-top: 2px solid var(--black);
  }

  .nav-link {
    display: flex;
    flex-direction: column;
    gap: 8px;
    text-decoration: none;
    color: var(--black);
    padding: 20px;
    transition: background 0.2s ease-out;
    position: relative;
  }

  .nav-link:not(.disabled):hover {
    background: rgba(0, 0, 0, 0.05);
  }

  .nav-link.next {
    text-align: right;
    align-items: flex-end;
  }

  .nav-link.disabled {
    opacity: 0;
    pointer-events: none;
  }

  .nav-label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.625rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    opacity: 0.6;
  }

  .nav-title {
    font-family: 'Geist', sans-serif;
    font-weight: 700;
    font-size: clamp(1.25rem, 3svw, 2rem);
    line-height: 1;
    letter-spacing: -0.01em;
  }

  .nav-client {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    opacity: 0.7;
  }

  /* Back to Home */
  .back-home {
    max-width: 1400px;
    margin: 0 auto;
    text-align: center;
  }

  .back-link {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    text-decoration: none;
    color: var(--black);
    padding: 12px 24px;
    border: 2px solid var(--black);
    display: inline-block;
    transition: all 0.2s ease-out;
  }

  .back-link:hover {
    background: var(--black);
    color: var(--red);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .project-header {
      grid-template-columns: 1fr;
      gap: 24px;
      align-items: start;
    }

    .header-right {
      padding-bottom: 0;
    }

    .info-section,
    .credits-section {
      grid-template-columns: 1fr;
      gap: 20px;
    }
  }

  @media (max-width: 768px) {
    #project-detail {
      padding: 100px 5svw 60px;
    }

    .project-header {
      margin-bottom: 40px;
    }

    .gallery {
      margin-bottom: 60px;
      gap: 30px;
    }

    .gallery-row {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .project-navigation {
      grid-template-columns: 1fr;
      gap: 20px;
      margin: 60px auto 30px;
    }

    .nav-link.next {
      text-align: left;
      align-items: flex-start;
    }
  }
</style>