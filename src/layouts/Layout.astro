---
// src/layouts/Layout.astro
// Main HTML shell with new fixed nav and footer
import '../styles/global.css';
import CustomCursor from '../components/CustomCursor.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import SmoothScroll from '../components/SmoothScroll.astro';
export interface Props {
	title: string;
}

const { title } = Astro.props;
---
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Nate Wilkens Portfolio" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Geist:wght@400;700&family=Geist+Mono:wght@400;500;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<Navigation />
		<div id="page-wrapper">
			<main id="main-content">
				<slot /> <!-- Your page content will be injected here -->
			</main>
			<CustomCursor />
		</div>
		<SmoothScroll />
		<Footer />
	</body>
</html>